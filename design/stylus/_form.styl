.form-styled
  text-align center

  .field
    max-width 300px
    padding 5px 0

    .modal &
      margin 0 auto

  input[type="text"],
  input[type="password"],
  input[type="button"],
  input[type="submit"]
    border-radius 3px

    &:focus
      outline none

    .modal &
      box-sizing border-box
      width 100%
      padding 10px

  input[type="text"],
  input[type="password"]
    border 1px solid #AAA
    transition border-color 0.2s linear

    &:focus
      if $theme-flat
        border-color #666
      else
        border-color #999
        box-shadow inset 0 0 3px #999

.btn
  border-radius 3px

  if $theme-flat
    background $brand-blue
    border 1px solid darken($brand-blue, 20%)
    transition background-color 0.2s linear
  else
    background linear-gradient($brand-blue, darken($brand-blue, 20%)) repeat-x darken($brand-blue, 20%)
    box-shadow inset 0 1px 0px lighten($brand-blue, 20%)
    text-shadow 0 -1px 0px darken($brand-blue, 30%)
    border 1px solid darken($brand-blue, 20%)
    transition background-position 0.2s linear

  color #FFF
  padding 5px 20px

  &:hover,
  &:focus
    if $theme-flat
      background darken($brand-blue, 20%)
    else
      background-position 0 -1em

  &:active
    if $theme-flat
      background darken($brand-blue, 10%)
    else
      transition none
      background linear-gradient(darken($brand-blue, 20%), darken($brand-blue, 10%))
      background-position 0 0


