$modal-heading = #DDD

.modal-backdrop
  display none
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background rgba(#000, 0.5)

.modal
  display none
  position fixed
  top -5px
  opacity 0
  left 50%
  width 500px
  margin-left (-0.5 * @width)
  background lighten($modal-heading, 50%)
  if not $theme-flat
    border 1px solid darken($modal-heading, 10%)
  border-radius 3px
  overflow hidden
  box-shadow 0 1px 5px rgba(#000, 0.5)

  .modal-heading
    clearfix()
    if $theme-flat
      background $modal-heading
      border-bottom 1px solid darken($modal-heading, 30%)
    else
      background linear-gradient(lighten($modal-heading, 30%), $modal-heading)
      box-shadow inset 0  1px 0 lighten($modal-heading, 60%), \
                 inset 0 -1px 0 darken($modal-heading, 20%)
      border-bottom 1px solid lighten($modal-heading, 30%)
    line-height 40px

    h3
      margin 0
      padding 0 0 0 10px
      font-size 18px
      text-align center
      if not $theme-flat
        text-shadow 0 -1px 0 lighten($modal-heading, 40%)

      color darken($modal-heading, 60%)

    .modal-close
      float right
      color darken($modal-heading, 20%)
      cursor pointer
      background darken($modal-heading, 40%)
      if not $theme-flat
        box-shadow inset 0 0px 2px darken($modal-heading, 40%), \
                         0 0px 2px lighten($modal-heading, 20%)
      border-radius 50%
      width 20px
      margin 10px 10px 0 0
      height @width
      text-align center
      line-height @height
      display inline-block

      &:hover
        color lighten($modal-heading, 60%)

  .modal-content
    padding 10px

