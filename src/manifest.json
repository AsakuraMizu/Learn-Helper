{
	"name" : "Learn helper",
	"version":"1.3",
	"manifest_version" : 2,
	"description":"添加网络学堂Deadline查询功能，修复网络学堂在Chrome下的排版问题",
	"content_scripts":[
		{
			"matches": [
				"*://learn.tsinghua.edu.cn/MultiLanguage/lesson/student/*",
				"*://learn.tsinghua.edu.cn/MultiLanguage/public/bbs/*"
			],
			"js":["learn.js"],
			"all_frames" : true
		},
		{
			"matches":[
				"*://learn.tsinghua.edu.cn/MultiLanguage/lesson/student/mainstudent.jsp"
			],
			"js" : ["main.js"]
		}
	],
	"background" : {
		"scripts" : ["background.js"]
	},
	"permissions" : ["*://learn.tsinghua.edu.cn/*", "tabs"],
	"options_page": "exception.html",
	"icons": {
		"16" : "icons/16.png",
		"128" : "icons/128.png"
	},
	"browser_action": {
		"default_icon": "icons/16.png",
		"default_title": "Learn Helper",
		"default_popup" : "popup.html"
	},
	"web_accessible_resources":["learn.inject.js"]
}
